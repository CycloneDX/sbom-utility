{
    "$id": "http://cyclonedx.org/schema/bom-1.5-dev-formulation.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["formula"],
    "additionalProperties": false,
    "properties": {
        "formula": {
            "type": "object",
            "$ref": "#/definitions/formula"
        }
    },
    "definitions": {
         "formula": {
             "type": "object",
             "properties": {
               "components": {
                 "description": "Transient components that are used in tasks that constitute one or more of this formula's workflows",
                 "type": "array",
                 "items": {"$ref": "#/definitions/component"},
                 "uniqueItems": true
               },
               "services": {
                  "description": "Transient services that are used in tasks that constitute one or more of this formula's workflows",
                  "type": "array",
                  "items": {"$ref": "#/definitions/service"},
                  "uniqueItems": true
               },
               "workflows": {
                  "description": "List of workflows that can be triggered",
                  "type": "array",
                  "items": {"$ref": "#/definitions/workflow"},
                  "uniqueItems": true
               }
             }
        },
        "workflow": {
          "type": "object",
          "allOf": [{"$ref": "#/definitions/abstractResourceType"}],
          "properties": {
              "type": {
                 "type": "string",
                 "enum": ["lint", "scan", "build", "test", "deploy", "release",
                    "continuous-integration", "continuous-delivery"]
              },
              "instanceId": {
                "type": "string",
                "description": "unique identifier of the specific workflow execution instance"
              },
              "tasks": {
                  "type": "array",
                  "items": {"$ref": "#/definitions/task"},
                  "uniqueItems": true
              },
              "dependencies": {
                  "type": "array",
                  "items": {"$ref": "#/definitions/dependency"},
                  "uniqueItems": true
              },
              "bom-ref": {},
              "name": {},
              "description": {}
          },
          "required": ["type", "tasks"]
        },
        "task": {
            "type": "object",
            "allOf": [{"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "steps": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/step"},
                    "uniqueItems": true
                },
                "bom-ref": {},
                "name": {},
                "description": {}
            },
            "additionalProperties": false
        },
        "step": {
            "type": "object"
        },
        "inputType": {
            "type": "object",
            "properties": {
                "resourceRefs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/resourceReferenceChoice"},
                    "uniqueItems": true
                },
                "environmentVars": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/properties"},
                    "uniqueItems": true
                }
            },
            "additionalProperties": false
        },
        "outputType": {
            "type": "object",
            "properties": {
                "resourceRefs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/resourceReferenceChoice"},
                    "uniqueItems": true
                },
                "environmentVars": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/properties"},
                    "uniqueItems": true
                }
            },
            "additionalProperties": false
        },
        "abstractResourceType": {
            "type": "object",
            "properties": {
                "bom-ref": {"type": "string"},
                "name": {"type": "string"},
				"version": {"type": "string"},
                "description": {"type": "string"},
                "externalReferences": {"type": "object"},
                "properties": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/property"},
                    "additionalItems": false
                }
            },
            "required": ["bom-ref", "name"]
        },
        "component": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "type": {"type": "string",
                    "enum": ["application", "library", "container",
                      "operating-system", "file", "configuration", "log"]},
                "cpe": {"type": "string"},
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {},
                "properties": {}
            },
            "additionalProperties": false
        },
        "service": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
             "properties": {
                "endpoints": {"type": "object"},
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {},
                "properties": {}
            },
            "additionalProperties": false
        },
        "machineLearningModel": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "modelCard": {"type": "object"},
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {},
                "properties": {}
            },
            "additionalProperties": false
        },
        "resourceChoice": {
            "type": "object",
            "oneOf": [
                {"$ref": "#/definitions/component" },
                {"$ref": "#/definitions/service"},
                {"$ref": "#/definitions/machineLearningModel"}
            ]
        },
        "resourceReferenceChoice": {
            "type": "object",
            "properties": {
                "bom-ref": { "$ref": "#/definitions/refType"},
                "externalReference": {"$ref": "#/definitions/externalReference"}
            },
            "oneOf":[
                {"required": ["bom-ref"]},
                {"required": ["externalReference"]}
            ]
        },
        "property": {
            "type": "object",
            "properties": {
                "name": {"type": "string"},
                "value": {"type": "string"}
            }
        },
        "dependency": {
            "type": "object",
            "required": ["ref"],
            "additionalProperties": false,
            "properties": {
                "ref": {"$ref": "#/definitions/refType"},
                "dependsOn": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/refType"},
                    "uniqueItems": true
                }
            }
        },
        "refType": {"type": "string"}
    }
}
