{
    "$id": "http://cyclonedx.org/schema/bom-1.5-dev-formulation.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["formula"],
    "additionalProperties": false,
    "properties": {
        "formula": {
            "$ref": "#/definitions/formula"
        }
    },
    "definitions": {
         "formula": {
             "type": "object",
             "properties": {
               "components": {
                 "description": "Transient components that are used in tasks that constitute one or more of this formula's workflows",
                 "type": "array",
                 "items": {"$ref": "#/definitions/component"},
                 "uniqueItems": true
               },
               "services": {
                  "description": "Transient services that are used in tasks that constitute one or more of this formula's workflows",
                  "type": "array",
                  "items": {"$ref": "#/definitions/service"},
                  "uniqueItems": true
               },
               "workflows": {
                  "description": "List of workflows that can be triggered",
                  "type": "array",
                  "items": {"$ref": "#/definitions/workflow"},
                  "uniqueItems": true
               }
             }
        },
        "workflow": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "tasks"],
          "allOf": [{"$ref": "#/definitions/taskType"}],
          "properties": {
              "type": {
                 "type": "string",
                 "enum": ["lint", "scan", "build", "test", "deploy", "release",
                    "continuous-integration", "continuous-delivery", "other"]
              },
              "instanceId": {
                "type": "string",
                "description": "unique identifier of the specific workflow execution instance"
              },
              "tasks": {
                  "type": "array",
                  "items": {"$ref": "#/definitions/task"},
                  "uniqueItems": true
              },
              "taskDependencies": {
                  "type": "array",
                  "items": {"$ref": "#/definitions/dependency"},
                  "uniqueItems": true
              },
              "workspaces": {
                "type": "array",
                "items": {"$ref": "#/definitions/workspace"},
                "uniqueItems": true
            },
            "trigger": {},
            "timeStart": {},
            "timeEnd": {},
            "name": {},
            "description": {},
            "bom-ref": {},
            "externalReferences": {},
            "properties": {}
          }
        },
        "task": {
            "additionalProperties": false,
            "allOf": [{"$ref": "#/definitions/taskType"}],
            "properties": {
                "trigger": {},
                "steps": {},
                "timeStart": {},
                "timeEnd": {},
                "bom-ref": {},
                "externalReferences": {},
                "name": {},
                "description": {},
                "version": {},
                "properties": {}
            }
        },
        "taskType": {
            "type": "object",
            "additionalProperties": true,
            "allOf": [{"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "trigger": {"$ref": "#/definitions/trigger"},
                "steps": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/step"},
                    "uniqueItems": true
                },
                "inputs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/inputType"},
                    "uniqueItems": true
                },
                "outputs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/outputType"},
                    "uniqueItems": true
                },
                "tools": {
                    "$comment": "TBD: Tools could be declared as inputs/outputs/both",
                    "type": "array",
                    "items": {"$ref": "#/definitions/resourceReferenceChoice"},
                    "uniqueItems": true
                },
                "timeStart": {
                    "type": "string",
                    "format": "date-time",
                    "title": "timeStart",
                    "description": "The date and time (timestamp) when the task started."
                },
                "timeEnd": {
                    "type": "string",
                    "format": "date-time",
                    "title": "timeEnd",
                    "description": "The date and time (timestamp) when the task ended."
                },
                 "workspaceRefs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/workspaceRef"},
                    "uniqueItems": true
                },
                "bom-ref": {},
                "name": {},
                "description": {},
                "externalReferences": {},
                "properties": {}
            }
        },
        "step": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {"type": "string"},
                "description": {"type": "string"},
                "commands": {
                    "description": "Ordered list of commands or directives for the step",
                    "type": "array",
                    "items": { "$ref": "#/definitions/command"}
                },
                "properties": {
                    "type": "array",
                    "additionalItems": false,
                    "items": {"$ref": "#/definitions/property"}
                }
            }
        },
        "command": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "executed": { "type": "string" }
            }
        },
        "workspace": {
            "type": "object",
            "$comment": "https://kubernetes.io/docs/concepts/storage/persistent-volumes/",
            "additionalProperties": true,
            "allOf": [{"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "accessMode": {
                    "type": "string",
                    "enum": ["read-write-once","read-only", "read-write-many", "write-once", "write-only"]
                },
                "mountPath": {"type": "string"},
                "volume": {
                    "$ref": "#/definitions/volume"
                },
                "description": {}
            }
        },
        "workspaceRef": {
            "type": "object",
            "additionalProperties": true,
            "allOf": [{"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "name": {},
                "description": {}
            }
        },
        "volume": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "volumeName": {"type": "string"},
                "volumeMode": {
                    "type": "string",
                    "enum": ["filesystem"]
                },
                "volumePath": {"type": "string"},
                "sizeAllocated": {"type": "string"}
           }
        },
        "trigger": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                     "enum": ["api", "webhook", "cron"]
                },
                "event": { "$ref": "#/definitions/event"},
                "resource": {
                    "$ref": "#/definitions/resourceReferenceChoice",
                    "description": "The trigger's implementation (e.g., a component or service)"
                },
                "condition": {
                    "type": "object",
                    "properties": {
                       "description": { "type": "string"},
                       "expression": { "type": "string"}
                    }
                },
                "timeActivated": {
                    "type": "string",
                    "format": "date-time",
                    "title": "timeActivated",
                    "description": "The date and time (timestamp) when the trigger was activated."
                }
            }
        },
        "event": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": { "type": "string"},
                "description": { "type": "string"},
                "timeReceived": {
                    "type": "string",
                    "format": "date-time",
                    "title": "timeReceived",
                    "description": "The date and time (timestamp) when the event was received."
                },
                "data": {"$ref": "#/definitions/attachment"},
                "source": {"$ref": "#/definitions/resourceReferenceChoice"},
                "target": {"$ref": "#/definitions/resourceReferenceChoice"}
            }
        },
        "inputType": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "resourceRefs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/resourceReferenceChoice"},
                    "uniqueItems": true
                },
                "environmentVars": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/property"},
                    "uniqueItems": true
                }
            }
        },
        "outputType": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "resourceRefs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/resourceReferenceChoice"},
                    "uniqueItems": true
                },
                "environmentVars": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/property"},
                    "uniqueItems": true
                }
            }
        },
        "abstractResourceType": {
            "type": "object",
            "properties": {
                "bom-ref": {"#ref": "#/definitions/refType"},
                "name": {"type": "string"},
				"version": {"type": "string"},
                "description": {"type": "string"},
                "licenses": {"type": "object"},
                "releaseNotes": {"type": "object"},
                "externalReferences": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/externalReference"},
                    "additionalItems": false
                },
                "properties": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/property"},
                    "additionalItems": false
                },
                "signature": {"type": "object"}
            },
            "required": ["bom-ref", "name"]
        },
        "property": {
            "type": "object",
            "$comment": "TODO: v1.5 missing `additionalProperties` constraint",
            "additionalProperties": false,
            "properties": {
                "name": {"type": "string"},
                "value": {"type": "string"}
            }
        },
        "dependency": {
            "type": "object",
            "required": ["ref"],
            "additionalProperties": false,
            "properties": {
                "ref": {"$ref": "#/definitions/refType"},
                "dependsOn": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/refType"},
                    "uniqueItems": true
                }
            }
        },
        "externalReference": {
            "type": "object",
            "required": [ "url", "type" ],
            "additionalProperties": false,
            "properties": {
              "url": {"type": "string"},
              "comment": {"type": "string"},
              "type": {
                "type": "string",
                "enum": [ "vcs", "issue-tracker", "website",
                    "advisories", "bom", "mailing-list",
                    "social", "chat", "documentation",
                    "support", "distribution", "license", "build-meta",
                    "build-system", "release-notes", "other",
                    "log", "configuration", "evidence"
                  ]
              },
              "hashes": {"type": "string"}
            }
        },
        "attachment": {
            "type": "object",
            "required": ["content"],
            "additionalProperties": false,
            "properties": {
              "contentType": {
                "type": "string",
                "default": "text/plain"
              },
              "encoding": {
                "type": "string",
                "enum": ["base64"]
              },
              "content": {
                "type": "string"
              }
            }
        },
        "organizationalEntity": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "array",
                "items": {
                  "type": "string",
                  "format": "iri-reference"
                }
              },
              "contact": {
                "type": "array",
                "items": {"type": "string"}
              }
            }
        },
        "component": {
            "type": "object",
            "required": ["type", "name" ],
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": [ "application", "framework","library", "container",
                    "operating-system", "device", "firmware", "file",
                    "log", "configuration", "evidence", "utility", "client"
                ]
              },
              "mime-type": {"type": "string"},
              "bom-ref": {
                "$ref": "#/definitions/refType"
              },
              "supplier": {"type": "string"},
              "author": {"type": "string"},
              "publisher": {"type": "string"},
              "group": {"type": "string"},
              "name": {"type": "string"},
              "version": {"type": "string"},
              "description": {"type": "string"},
              "scope": {"type": "string"},
              "hashes": {
                "type": "array",
                "additionalItems": false,
                "items": {"type": "string"}
              },
              "licenses": {
                "type": "array",
                "additionalItems": false,
                "items": {"type": "string"}
              },
              "copyright": {"type": "string"},
              "cpe": {"type": "string"},
              "purl": {"type": "string"},
              "swid": {"type": "string"},
              "pedigree": {
                "type": "object"
              },
              "externalReferences": {
                "type": "array",
                "additionalItems": false,
                "items": {"$ref": "#/definitions/externalReference"}
              },
              "components": {
                "type": "array",
                "additionalItems": false,
                "items": {"$ref": "#/definitions/component"},
                "uniqueItems": true
              },
              "evidence": {"type": "string"},
              "releaseNotes": {"type": "string"},
              "properties": {
                "type": "array",
                "additionalItems": false,
                "items": {"$ref": "#/definitions/property"}
              },
              "signature": {"type": "string"}
            }
        },
        "service": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
              "bom-ref": {"$ref": "#/definitions/refType"},
              "provider": {"type": "string"},
              "group": {"type": "string"},
              "name": {"type": "string"},
              "version": {"type": "string"},
              "description": {"type": "string"},
              "endpoints": {
                "type": "array",
                "items": {"type": "string"}
              },
              "authenticated": {"type": "boolean"},
              "x-trust-boundary": {"type": "boolean"},
              "data": {"type": "string"},
              "licenses": {
                "type": "array",
                "items": {"type": "string"}
              },
              "externalReferences": {
                "type": "array",
                "items": {"$ref": "#/definitions/externalReference"}
              },
              "services": {
                "type": "array",
                "additionalItems": false,
                "items": {"$ref": "#/definitions/service"},
                "uniqueItems": true
              },
              "releaseNotes": {"type": "string"},
              "properties": {
                "type": "array",
                "additionalItems": false,
                "items": {"$ref": "#/definitions/property"}
              },
              "signature": { "type": "string"}
            }
        },
        "refType": {"type": "string"},
        "resourceChoice": {
            "type": "object",
            "oneOf": [
                {"$ref": "#/definitions/component" },
                {"$ref": "#/definitions/service"}
            ]
        },
        "resourceReferenceChoice": {
            "type": "object",
            "properties": {
                "bom-ref": { "$ref": "#/definitions/refType"},
                "externalReference": {"$ref": "#/definitions/externalReference"}
            },
            "oneOf":[
                {"required": ["bom-ref"]},
                {"required": ["externalReference"]}
            ]
        }
    }
}
