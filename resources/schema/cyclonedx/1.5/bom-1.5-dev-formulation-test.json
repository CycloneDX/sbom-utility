{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://test-polymorphic",
    "type": "object",
    "required": ["bom"],
    "properties": {
        "bom": {
            "type": "object",
            "properties": {
                "workflow": {"$ref": "#/definitions/workflow"}
            },
            "additionalItems": false,
            "required": ["workflow"]
        },
        "choice-concrete-example": {
            "type": "object",
            "properties": {
                "resource": {"$ref": "#/definitions/resourceChoice"},
                "service": {"$ref": "#/definitions/serviceType"}
            },
            "required": ["resource", "service"]
        }
    },
    "definitions": {
        "workflow": {
          "tasks": {
            "type": "array",
            "items": {"$ref": "#/definitions/task"},
            "uniqueItems": true
          }
        },
        "task": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
            "steps": {
                "type": "array",
                "items": {"$ref": "#/definitions/step"},
                "uniqueItems": true
            },
            "inputs": "inputType",
            "outputs": "outputType",
            "runtime": {"$ref": "#/definitions/resourceReferenceChoice"},
            "executor": {"$ref": "#/definitions/resourceReferenceChoice"},
            "hardware": {"$ref": "#/definitions/resourceReferenceChoice"}
        },
        "step": {
            "type": "object"
        },
        "inputType": {
            "type": "object",
            "properties": {
                "resourceRefs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/resourceReferenceChoice"},
                    "uniqueItems": true
                },
                "environmentVars": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/properties"},
                    "uniqueItems": true
                }
            }
        },
        "outputType": {
            "type": "object",
            "properties": {
                "resourceRefs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/resourceReferenceChoice"},
                    "uniqueItems": true
                },
                "environmentVars": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/properties"},
                    "uniqueItems": true
                }
            }
        },
        "abstractResourceType": {
            "type": "object",
            "properties": {
                "bom-ref": {"type": "string"},
                "name": {"type": "string"},
				"version": {"type": "string"},
                "description": {"type": "string"},
                "externalReferences": {"type": "object"}
            },
            "required": ["bom-ref", "name"]
        },
        "componentType": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "type": {"type": "string",
                    "enum": ["application", "library", "container",
                      "operating-system", "file", "configuration", "log"]},
                "cpe": {"type": "string"},
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {}
            },
            "additionalProperties": false
        },
        "serviceType": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
             "properties": {
                "endpoints": {"type": "object"},
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {}
            },
            "additionalProperties": false
        },
        "toolType": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {}
            },
            "additionalProperties": false
        },
        "machineLearningModelType": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "modelCard": {"type": "object"},
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {}
            },
            "additionalProperties": false
        },
        "resourceChoice": {
            "type": "object",
            "oneOf": [
                {"$ref": "#/definitions/componentType" },
                {"$ref": "#/definitions/serviceType"},
                {"$ref": "#/definitions/toolType"},
                {"$ref": "#/definitions/machineLearningModelType"}
            ]
        },
        "resourceReferenceChoice": {
            "type": "object",
            "properties": {
                "bom-ref": { "$ref": "#/definitions/refType"},
                "externalReference": {"$ref": "#/definitions/externalReference"}
            },
            "oneOf":[
                {"required": ["bom-ref"]},
                {"required": ["externalReference"]}
            ]
        }
    }
}
