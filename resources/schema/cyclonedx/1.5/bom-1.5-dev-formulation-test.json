{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://test-polymorphic",
    "type": "object",
    "required": ["bom"],
    "properties": {
        "bom": {
            "type": "object",
            "properties": {
                "workflow": {"$ref": "#/definitions/workflow"}
            },
            "additionalItems": false,
            "required": ["workflow"]
        }
    },
    "definitions": {
        "workflow": {
          "type": "object",
          "properties": {
              "tasks": {
                  "type": "array",
                  "items": {"$ref": "#/definitions/task"},
                  "uniqueItems": true
              },
              "dependencies": {
                  "type": "array",
                  "items": {"$ref": "#/definitions/dependency"},
                  "uniqueItems": true
              }
          },
          "required": ["tasks"]
        },
        "task": {
            "type": "object",
            "allOf": [{"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "steps": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/step"},
                    "uniqueItems": true
                },
                "bom-ref": {},
                "name": {}
            },
            "additionalProperties": false
        },
        "step": {
            "type": "object"
        },
        "inputType": {
            "type": "object",
            "properties": {
                "resourceRefs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/resourceReferenceChoice"},
                    "uniqueItems": true
                },
                "environmentVars": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/properties"},
                    "uniqueItems": true
                }
            },
            "additionalProperties": false
        },
        "outputType": {
            "type": "object",
            "properties": {
                "resourceRefs": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/resourceReferenceChoice"},
                    "uniqueItems": true
                },
                "environmentVars": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/properties"},
                    "uniqueItems": true
                }
            },
            "additionalProperties": false
        },
        "abstractResourceType": {
            "type": "object",
            "properties": {
                "bom-ref": {"type": "string"},
                "name": {"type": "string"},
				"version": {"type": "string"},
                "description": {"type": "string"},
                "externalReferences": {"type": "object"},
                "properties": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/property"},
                    "additionalItems": false
                }
            },
            "required": ["bom-ref", "name"]
        },
        "componentType": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "type": {"type": "string",
                    "enum": ["application", "library", "container",
                      "operating-system", "file", "configuration", "log"]},
                "cpe": {"type": "string"},
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {},
                "properties": {}
            },
            "additionalProperties": false
        },
        "serviceType": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
             "properties": {
                "endpoints": {"type": "object"},
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {},
                "properties": {}
            },
            "additionalProperties": false
        },
        "machineLearningModelType": {
            "allOf": [ {"$ref": "#/definitions/abstractResourceType"}],
            "properties": {
                "modelCard": {"type": "object"},
                "bom-ref": {},
                "name": {},
                "version": {},
                "description": {},
                "externalReferences": {},
                "properties": {}
            },
            "additionalProperties": false
        },
        "resourceChoice": {
            "type": "object",
            "oneOf": [
                {"$ref": "#/definitions/componentType" },
                {"$ref": "#/definitions/serviceType"},
                {"$ref": "#/definitions/machineLearningModelType"}
            ]
        },
        "resourceReferenceChoice": {
            "type": "object",
            "properties": {
                "bom-ref": { "$ref": "#/definitions/refType"},
                "externalReference": {"$ref": "#/definitions/externalReference"}
            },
            "oneOf":[
                {"required": ["bom-ref"]},
                {"required": ["externalReference"]}
            ]
        },
        "property": {
            "type": "object",
            "properties": {
                "name": {"type": "string"},
                "value": {"type": "string"}
            }
        },
        "dependency": {
            "type": "object",
            "required": ["ref"],
            "additionalProperties": false,
            "properties": {
                "ref": {"$ref": "#/definitions/refType"},
                "dependsOn": {
                    "type": "array",
                    "items": {"$ref": "#/definitions/refType"},
                    "uniqueItems": true
                }
            }
        },
        "refType": {"type": "string"}
    }
}
